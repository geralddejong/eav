<schema>
    <attributes>
        <attribute name="unique" dataType="IDENTIFIER" required="true">
            <prompt>Unique identifier?</prompt>
            <field>
                <string maximumLength="12"/>
            </field>
        </attribute>
        <attribute name="age" dataType="INTEGER">
            <prompt>How old is this person?</prompt>
            <field>
                <integer maximumValue="110" minimumValue="18"/>
            </field>
        </attribute>
        <attribute name="time" dataType="DATETIME">
            <prompt>What does my watch say?</prompt>
            <field>
                <timestamp/>
            </field>
        </attribute>
        <attribute name="name" dataType="STRING">
            <prompt>What do people call me?</prompt>
            <field>
                <string maximumLength="100"/>
            </field>
        </attribute>
        <attribute name="size" dataType="TEXT">
            <prompt>How big am i?</prompt>
            <field>
                <string maximumLength="100"/>
            </field>
        </attribute>
    </attributes>
</schema>